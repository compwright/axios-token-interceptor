{
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "browser": false,
    "mocha": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "rules": {
    "max-len": [1, 120],
    "comma-dangle": ["error", "never"],
    "guard-for-in": 0,
    "new-cap": 0,
    "no-confusing-arrow": 0,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["**/*.test.js"]
      }
    ]
  }
}